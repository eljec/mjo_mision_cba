<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:paddingTop="2dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_orange_dark"
        android:orientation="vertical"
        android:layout_toLeftOf="@+id/contact_view_button_call"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/contact_view_name"
            android:text="Julio Castillo"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/contact_view_phone"
            android:text="0351-153053579"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_contact_phone_black_24dp"
        android:background="@android:color/transparent"
        android:layout_marginRight="30dp"
        android:id="@+id/contact_view_button_call"
        android:layout_alignTop="@+id/contact_view_button_msn"
        android:layout_toLeftOf="@+id/contact_view_button_msn"
        android:layout_toStartOf="@+id/contact_view_button_msn"
        android:layout_marginEnd="30dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/ic_import_contacts_black_24dp"
        android:background="@android:color/transparent"
        android:id="@+id/contact_view_button_msn"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
