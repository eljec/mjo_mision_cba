<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context=".section.contact.ContactFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Mision en la web -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:paddingLeft="5dp"
            android:textSize="22dp"
            android:text="@string/fragment_contact_mision_web_label"
            android:layout_marginBottom="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:id="@+id/fragment_contact_mision_web_content_label"
            android:textSize="18dp"
            android:drawableRight="@mipmap/ic_trending_flat_black_24dp"
            android:layout_marginBottom="10dp"
            android:text="@string/fragment_contact_mision_web_content" />

        <!-- Referentes -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:paddingLeft="5dp"
            android:textSize="22dp"
            android:text="@string/fragment_contact_referentes_de_mision_label"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:orientation="vertical"
            android:id="@+id/fragment_contact_referents_container_view">

        </LinearLayout>

        <!-- Animadores -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:paddingLeft="5dp"
            android:textSize="22dp"
            android:text="@string/fragment_contact_animadores_label"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:orientation="vertical"
            android:id="@+id/fragment_contact_animadores_container_view">

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:paddingLeft="5dp"
            android:id="@+id/fragment_contact_cotto_section_label"
            android:drawableRight="@mipmap/ic_info_black_24dp"
            android:textSize="22dp"
            android:text="@string/fragment_contact_cotto_label"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:id="@+id/fragment_contact_cotto_container_view">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/fragment_contact_cotto_address_line"
                android:textSize="17dp"
                android:text="DIreccion:"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/fragment_contact_cotto_phone"
                android:drawableRight="@mipmap/ic_phone_black_24dp"
                android:drawablePadding="5dp"
                android:textSize="17dp"
                android:text="Telefono:"/>

            <ImageButton
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/fragment_contact_cotto_image"
                android:scaleType="fitXY"
                android:background="@android:color/transparent"
                android:src="@drawable/cotto_image_map"/>


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:paddingLeft="5dp"
            android:layout_marginTop="10dp"
            android:textSize="22dp"
            android:text="@string/fragment_contact_emergencias_label"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <Button
                android:layout_width="wrap_content"
                android:id="@+id/fragment_contact_cotto_button_hospital"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/nurse_image"
                android:layout_centerInParent="true"
                android:text="@string/fragment_contact_hospital_label"
                android:background="@android:color/transparent"
                />


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/policeman_image"
                android:layout_alignParentLeft="true"
                android:text="@string/fragment_contact_policia_label"
                android:id="@+id/fragment_contact_cotto_button_police"
                android:background="@android:color/transparent"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/fireman_image"
                android:layout_alignParentRight="true"
                android:text="@string/fragment_contact_bomberos_label"
                android:id="@+id/fragment_contact_cotto_button_fireman"
                android:background="@android:color/transparent"
                />

        </RelativeLayout>

    </LinearLayout>
</ScrollView>
