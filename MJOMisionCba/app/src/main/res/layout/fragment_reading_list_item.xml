<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


    <ImageView
        android:id="@+id/fragment_reading_list_item_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="centerCrop"
        android:src="@drawable/imagen_lecturas"
        android:layout_marginLeft="20dp"
        android:layout_gravity="center_vertical"
        />

    <TextView
        android:id="@+id/fragment_reading_list_item_title"
        android:layout_marginLeft="20dp"
        android:textSize="17sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sabado 7"
        android:textStyle="bold"
        android:layout_gravity="center_vertical"
        android:padding="10dp"
        android:drawableRight="@mipmap/ic_trending_flat_black_24dp"
        />
    </LinearLayout>

    <View
        android:id="@+id/fragment_reading_list_item_separator_line"
        android:layout_width="match_parent"
        android:background="#E8EAF6"
        android:layout_height="2dp">
    </View>

</LinearLayout>
